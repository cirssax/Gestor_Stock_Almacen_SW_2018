<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      Prohbido almacenar este usuario por:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=form_for @user do|f| %>
  <div class="form-group">
    <%= f.label :'nombre usuario' %><br>
    <%= f.text_field :nombre_trabajador,class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :'apellido usuario' %><br>
    <%= f.text_field :apellidos_trabajador,class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :'rut' %><br>
    <%= f.text_field :rut%>-<%=f.text_field :dv %>
  </div>

  <div class="form-group">
    <%= f.label :'fono' %><br>
    <%= f.text_field :fono,class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :'domicilio' %><br>
    <%= f.text_field :domicilio,class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label  :'Rol' %>
    <%= f.collection_select(:id_rol, Role.all, :id, :descrip_rol, :prompt => 'Select') %>
  </div>
  <div class="form-group">
    <%= f.label :'Estado' %>
    <%= f.collection_select(:id_estado, State.all, :id, :descrip_estado, :prompt => 'Select') %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />

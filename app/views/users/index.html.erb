<h1>Lista Usuarios</h1>

<div class="col-12 col-sm-12 col-lg-12">
  <div class="table-responsive">
    <table class="table table-hover table-striped shadow-2dp">
      <tr class="info">
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Rut</th>
        <th>Rol</th>
        <th>Accion</th>
      </tr>
      <%@users.each do |user|%>
        <tr>
          <td><%= user.nombre_trabajador %></td>
          <td><%= user.apellidos_trabajador %></td>
          <td><%= user.rut %>-<%=user.dv %></td>
          <td><%= @rol.find(user.id_rol).descrip_rol %></td>
          <td><%= link_to 'Editar', edit_user_path(user.id), :class => 'btn btn-success btn-xs'%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<div>
  <%= link_to 'Nuevo Usuario', new_user_path, :class => 'btn btn-primary' %>
</div>




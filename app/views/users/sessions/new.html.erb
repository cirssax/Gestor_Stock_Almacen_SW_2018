<%= stylesheet_link_tag "authentication" %>

<div class="authentication-wrapper authentication-2 ui-bg-cover ui-bg-overlay-container px-4" style="background: url('/assets/background_login.jpg')">


  <div class="authentication-inner py-5">

    <div class="card">
      <div class="p-4 p-sm-5">
        <h2 class="text-center font-weight-normal mb-4">Acceso a la cuenta</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
              <a href="#" data-dismiss="alert" class="close">Ã—</a>
              <%= value %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :email, class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, class:"form-control", :placeholder => "example@example.com" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class:"form-label" %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Acceder", class:"btn btn-default btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




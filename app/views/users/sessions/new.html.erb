<%= stylesheet_link_tag "authentication" %>

<div class="authentication-wrapper authentication-2 ui-bg-cover ui-bg-overlay-container px-4"  id="backgrount" >


  <div class="authentication-inner py-5">

    <div class="card">
      <div class="p-4 p-sm-5">
        <h2 class="text-center font-weight-normal mb-4">Acceso a la cuenta</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render 'layouts/messages' %>
          <div class="form-group">
            <%= f.label :email, class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, class:"form-control", :placeholder => "example@example.com" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class:"form-label" %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Acceder", class:"btn btn-default btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>

    </div>

  </div>
</div>

<style>
  #backgrount{
    background: url('/assets/background_login.jpg') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

    /* Set rules to fill background */
    min-height: 100%;
    min-width: 1024px;

    /* Set up proportionate scaling */
    width: 100%;
    height: auto;

    /* Set up positioning */
    position: fixed;
    top: 0;
    left: 0;
  }

  @media screen and (max-width: 1024px) { /* Specific to this particular image */
    img.bg {
      left: 50%;
      margin-left: -512px;   /* 50% */
    }
  }
</style>



